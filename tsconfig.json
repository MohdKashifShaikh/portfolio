{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
    // "allowSyntheticDefaultImports": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "next.config.ts",
    "dist/types/**/*.ts",
    "dist/dev/types/**/*.ts"
  ],
  // "exclude": ["node_modules"],
  "exclude": [
    "node_modules",
    "**/*.test.ts", // Excludes files ending in .test.ts
    "**/*.test.tsx", // Excludes files ending in .test.tsx
    "**/*.spec.ts", // Excludes files ending in .spec.ts
    "**/*.spec.tsx", // Excludes files ending in .spec.tsx
    "**/__tests__/**",
    "setup.ts"
  ]
}
